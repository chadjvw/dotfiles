env:
  TERM: xterm-256color

window:
  dimensions:
    columns: 200
    lines: 50
  padding:
    x: 4
    y: 4
  dynamic_padding: true
{{ if eq .chezmoi.os "darwin" }}
  decorations: full
  startup_mode: Windowed
{{ else if eq .chezmoi.os "linux" }}
  decorations: none
  startup_mode: Maximized
{{ end -}}
  dynamic_title: true

scrolling:
  history: 10000
  multiplier: 3

font:
  size: {{ .font.mono.size }}

  normal:
    family: {{ .font.mono.name }}
    style: Regular

  bold:
    family: {{ .font.mono.name_bold }}
    style: Bold

  italic:
    family: {{ .font.mono.name }}
    style: Italic

  bold_italic:
    family: {{ .font.mono.name_bold }}
    style: Bold Italic

  use_thin_strokes: true

draw_bold_text_with_bright_colors: true

colors:
  primary:
    background: '#{{ .colors.background }}'
    foreground: '#{{ .colors.foreground }}'

  cursor:
    text: '#{{ .colors.text }}'
    cursor: '#{{ .colors.cursor }}'

  normal:
    black:   '#{{ .colors.normal.black }}'
    red:     '#{{ .colors.normal.red }}'
    green:   '#{{ .colors.normal.green }}'
    yellow:  '#{{ .colors.normal.yellow }}'
    blue:    '#{{ .colors.normal.blue }}'
    magenta: '#{{ .colors.normal.magenta }}'
    cyan:    '#{{ .colors.normal.cyan }}'
    white:   '#{{ .colors.normal.white }}'

  bright:
    black:   '#{{ .colors.bright.black }}'
    red:     '#fb4934'
    green:   '#{{ .colors.bright.green }}'
    yellow:  '#{{ .colors.bright.yellow }}'
    blue:    '#{{ .colors.bright.blue }}'
    magenta: '#{{ .colors.bright.magenta }}'
    cyan:    '#{{ .colors.bright.cyan }}'
    white:   '#{{ .colors.bright.white }}'

  vi_mode_cursor:
    text: '#{{ .colors.text }}'
    cursor: '#{{ .colors.cursor }}'

  selection:
   text: '#{{ .colors.background }}'
   background: '#{{ .colors.text }}'

  search:
    matches:
     foreground: '#{{ .colors.foreground }}'
     background: '#{{ .colors.bright.magenta }}'

    focused_match:
     foreground: '#{{ .colors.foreground }}'
     background: '#{{ .colors.normal.blue }}'

    bar:
     background: '#{{ .colors.bright.black }}'
     foreground: '#{{ .colors.bright.yellow }}'

  hints:
    start:
     foreground: '#{{ .colors.background }}'
     background: '#fb4934'

    end:
     foreground: '#{{ .colors.background }}'
     background: '#{{ .colors.bright.green }}'

bell:
  animation: EaseOutExpo
  duration: 1
  color: '#{{ .colors.cursor }}'

background_opacity: 1.0

mouse_bindings:
  - { mouse: Middle, action: PasteSelection }

mouse:
  double_click:
    threshold: 300

  triple_click:
    threshold: 300
    
  hide_when_typing: false

hints:
  enabled:
    - regex: "(mailto:|gemini:|gopher:|https:|http:|news:|file:|git:|ssh:|ftp:)\
              [^\u0000-\u001F\u007F-\u009F<>\"\\s{-}\\^⟨⟩`]+"
      command: open
{{ if eq .chezmoi.os "darwin" }}
      command: open
{{ else if eq .chezmoi.os "linux" }}
      command: xdg-open
{{ end -}}
      post_processing: true
      mouse:
        enabled: true
        mods: None
      binding:
        key: U
        mods: Control|Shift

selection:
  semantic_escape_chars: ",│`|:\"' ()[]{}<>"
  save_to_clipboard: true

cursor:
  style: Block
  unfocused_hollow: true

live_config_reload: true

alt_send_esc: true
