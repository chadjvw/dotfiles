alias vi="nvim"
alias vim="nvim"
alias svim="sudo nvim"
alias svi="sudo nvim"
alias edit="nvim"

alias clean-branches='git branch | grep -ve "master\$" | xargs git branch -D'

alias bat="bat --theme ansi-dark"

alias ls="exa --icons"
alias la="exa --all --all --icons --sort=modified"
alias ll='exa --all --long --header --icons --sort=modified'
alias lla='exa --all -all --long --header --group --icons --sort=modified'
alias lt='exa --tree --level=4 --icons'
alias llt='exa --tree --all --long --level=4 --icons'

alias grep="grep -i --color=auto"
alias rg="rg -S"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias mkdir="mkdir -pv"
alias mv="mv -v"
alias rm="rm -vi"
alias cp="cp -v"
alias rcp="rsync --progress --size-only --inplace --verbose"

alias df="df -H"
alias du="dua"
alias top="gotop"
alias find="fd"
alias figlet="figlet -f isometric3"

alias netstat="ss -tulpn"
alias ss="ss -tulpn"
alias sysd="sudo systemctl"
alias usysd="systemctl --user"

alias sudo="sudo "
alias ping="ping -c 5"
alias untar="tar -xvf"

alias diff="colordiff"
