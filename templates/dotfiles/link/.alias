alias vi="nvim"
alias vim="nvim"
alias svi="sudo nvim -u {{ user_home }}/.config/nvim/init.vim"
alias svi="sudo nvim -u {{ user_home }}/.config/nvim/init.vim"
alias edit="nvim"

alias clean-branches='git branch | grep -ve "master\$" | xargs git branch -D'

alias bat="bat --theme ansi-dark"

alias ls="exa --icons"
alias la="exa --all --all --icons --sort=modified"
alias ll='exa --all --long --header --icons --sort=modified'
alias lla='exa --all -all --long --header --group --icons --sort=modified'
alias lt='exa --tree --level=4 --icons'
alias llt='exa --tree --all --long --level=4 --icons'

alias grep="grep -i --color=auto"
alias rg="rg -S"
alias j="just"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias mkdir="mkdir -pv"
{% if ansible_distribution == 'MacOSX'%}
# jhome -v 1.8    #switches to java 1.8
# jhome -v 11    #switches to java 11
function jhome
    set -lx JAVA_HOME (/usr/libexec/java_home $argv)
    echo "JAVA_HOME:" $JAVA_HOME
    echo "java -version:"
    java -version
end

# Add GRC: https://github.com/garabik/grc
source /usr/local/etc/grc.fish
{% else %}
set -Ux SXHKD_SHELL /bin/bash
set -Ux JAVA_HOME /usr/lib/jvm/java-8-openjdk

# Add GRC: https://github.com/garabik/grc
source /etc/grc.fish
{% endif %}

alias mv="mv -v"
alias rm="rm -vi"
alias cp="cp -v"
alias rcp="rsync --progress --size-only --inplace --verbose"

alias df="df -H"
alias du="dua"
alias top="gotop"
